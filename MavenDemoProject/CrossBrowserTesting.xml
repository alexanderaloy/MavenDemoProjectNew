<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
  <test name="ChromeTest">
  <parameter name = "browser" value = "chrome"></parameter>
    <classes>     
      <class name="testScript.LoginTest">
      <methods>
      <include name = "verifyTheUserIsNotAbleToLoginWithIncorrectUsername"></include>
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="EdgeTest">
  <parameter name = "browser" value = "edge"></parameter>
    <classes>     
      <class name="testScript.LoginTest">
      <methods>
      <include name = "verifyTheUserIsAbleToLoginUsingValidCredentials"></include>
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->






<!--
xml file creation for CrossBrowserTesting-> right click testng.xml -> copy -> right click on project -> paste -> change name as CrossBrowserTesting 
-> provide parmeters and value -> right click on class -> run testng suite
